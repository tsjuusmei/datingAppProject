<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>Profile</title>
</head>

<body class="likes">

    <header>
        <a href="profile">
            <figure>
                <img src="static/images/profile.pic.jpg" alt="Profile picture">
                <figcaption><%= user.name %></figcaption>
            </figure>
        </a>
        <form action="/logout" method="post">
            <button type="submit">Logout</button>
        </form>
    </header>

    <main>

        <ul>
            <li>
                <a href='visitors'>
                    <figure>
                        <img src="static/images/eyes.png" alt="Visitors icon">
                        <figcaption> 4 Visitors</figcaption>
                    </figure>
                </a>
            </li>
            <li>
                <a href="likes">
                    <figure>
                        <img src="static/images/like.icon.invert.png" alt="Likes icon">
                        <figcaption> 2 Likes</figcaption>
                    </figure>
                </a>
            </li>
        </ul>

        <div>
            <ul>
                <% for (let i = 0; i < likes.length ; i++) { %>
                    <li>
                        <%= likes[i].name %>
                        <img data-id="<%= likes[i]._id %>" class='liked' src= " <%= likes[i].likedBy.includes(user._id.toString()) ? '/static/images/like.icon.invert.png' : '/static/images/like.icon.png' %> "  alt="">
                    </li>
                <% } %>
            </ul>
        </div>

    </main>

        
    <%- include('footer') %>

    <%- include('tail') %>

</body>
</html>